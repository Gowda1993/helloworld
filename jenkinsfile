pipeline {
  agent {label 'slave2'}
  stages {
    stage ('checkout') {
      steps {
       sh 'rm -rf hello-world-war'
       sh 'git clone https://github.com/Gowda1993/helloworld.git'
      }
    }
    stage ('build') {
      steps {
        sh 'mvn clean install'
  }
}
    stage('deploy') {
      steps {
      sh 'cp /home/slave2/workspace/helloworld/target/hello-world-war-1.0.0.war /root/opt/apache-tomcat-9.0.85/webapps/'
  }
}
  }
}
