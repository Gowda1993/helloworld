pipeline {
  agent {label 'java'}
  stages {
    stage ('checkout') {
      steps {
       sh 'git https://github.com/gshashi1408/hello-world-war.git'
      }
    }
    stage ('build') {
      steps {
        sh 'mvn clean install'
  }
}
    stage('deploy') {
      steps {
      sh 'scp /home/slave2/workspace/helloworld/target/hello-world-war-1.0.0.war root@172.31.37.35:/opt/apache-tomcat-9.0.85/webapps/'
  }
}
  }
}
