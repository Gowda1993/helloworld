pipeline {
  agent {label 'slave2'}
  stages {
    stage ('checkout') {
      steps {
       sh 'rm -rf hello-world-war'
       sh 'git clone https://github.com/gshashi1408/hello-world-war.git'
      }
    }
    stage ('build') {
      steps {
        sh 'mvn clean install'
  }
}
    stage('deploy') {
      steps {
      sh 'scp /home/slave2/workspace/Helloworld/target/hello-world-war-1.0.0.war root@172.31.37.35:/root/apache-tomcat-8.5.98/webapps/'
  }
}
  }
}
